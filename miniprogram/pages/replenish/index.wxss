.page{padding:12px}
.empty{padding:40px 0;color:#999;text-align:center}
.tip{color:#666;font-size:12px;margin:8px 0 12px}
.card{display:flex;gap:12px;background:#fff;border-radius:14px;padding:12px;margin-bottom:10px;box-shadow:0 2px 6px rgba(0,0,0,.05)}
.thumb{width:64px;height:64px;border-radius:8px;background:#f5f5f5}
.meta{flex:1;min-width:0}
.name{font-weight:600}
.sub{color:#888;font-size:12px;margin-top:2px}
.badges{margin-top:6px;display:flex;gap:8px;align-items:center;flex-wrap:wrap}
.badge{background:#eef6ff;color:#1677ff;border-radius:999px;padding:2px 8px;font-size:12px}
.reason{color:#999;font-size:12px}
.ops{margin-top:8px;display:flex;gap:8px}
.btn{background:#1677ff;color:#fff;border-radius:999px}
.ghost{background:#fff;color:#1677ff;border:1px solid #1677ff}
