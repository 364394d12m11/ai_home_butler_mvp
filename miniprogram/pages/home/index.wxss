/* pages/home/index.wxss - V3.1 气质升级版（清理版） */

/* ========== 基础页面 ========== */
.page {
  min-height: 100vh;
  padding: 32rpx 24rpx 140rpx;
  transition: background 1s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: page-fade-in 600ms ease-out;
}

@keyframes page-fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* ========== 天气动画层 ========== */
.weather-animations {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
  opacity: 0;
  animation: fade-in 800ms ease-out 200ms forwards;
}

@keyframes fade-in {
  to { opacity: 1; }
}

.raindrops {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 4;
}

/* 夜间降水降亮度 */
.night .raindrop-light,
.night .snowflake-light {
  filter: brightness(0.7) saturate(0.8);
  opacity: 0.75 !important;
}

.stars {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 60%;
  z-index: 1;
}

/* ========== AI问候语 - 顶部轻盈样式 ========== */
.ai-greeting-top {
  position: relative;
  z-index: 10;
  margin-bottom: 24rpx;
  padding: 16rpx 24rpx;
  text-align: center;
  animation: greeting-slide-down 800ms ease-out 300ms both;
}

@keyframes greeting-slide-down {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.greeting-text {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.65);
  line-height: 1.6;
  letter-spacing: 0.5rpx;
}

/* ========== 天气核心信息 - 中心焦点 ========== */
.weather-hero {
  position: relative;
  z-index: 10;
  margin: 40rpx 0 32rpx;
  text-align: center;
  animation: hero-zoom-in 1s cubic-bezier(0.4, 0, 0.2, 1) 400ms both;
}

@keyframes hero-zoom-in {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.hero-main {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.hero-emoji {
  width: 64rpx;
  height: 64rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.1));
}

/* 温度与图标一行 */
.temp-line {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 6rpx;
}

.weather-icon {
  width: 58rpx;
  height: 58rpx;
  filter: drop-shadow(0 4rpx 10rpx rgba(0,0,0,0.25));
}

.hero-temp {
  font-size: 58rpx;
  font-weight: 200;
  color: #ffffff;
  line-height: 1;
  letter-spacing: -2rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.35);
}

.hero-desc {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255,255,255,0.95);
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.25);
}

.hero-temp-range {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255,255,255,0.85);
  margin-top: 8rpx;
  letter-spacing: 0.5rpx;
  text-shadow: 0 1rpx 3rpx rgba(0,0,0,0.25);
}

.hero-location {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 12rpx;
}

.location-icon {
  font-size: 20rpx;
  opacity: 0.7;
  color: rgba(255,255,255,0.85);
}

.location-text {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255,255,255,0.85);
  text-shadow: 0 1rpx 3rpx rgba(0,0,0,0.25);
}

/* ========== 日期与节气信息 ========== */
.date-info-card {
  position: relative;
  z-index: 10;
  margin: 0 0 20rpx;
  padding: 20rpx 28rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(30rpx) saturate(180%);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.04);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-row {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.date-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.weekday-text {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.5);
}

.lunar-text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.4);
  margin-left: 12rpx;
  letter-spacing: 0;
}

/* ========== ✅ 新增：轻量信息条 ========== */
.meta-bar {
  position: relative;
  z-index: 10;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 0 0 20rpx;
  animation: meta-fade-in 600ms ease-out;
}

@keyframes meta-fade-in {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.meta-item {
  padding: 8rpx 16rpx;
  border: 1rpx solid rgba(255,255,255,0.2);
  border-radius: 9999rpx;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(10rpx);
  font-size: 22rpx;
  color: rgba(0,0,0,0.7);
  font-weight: 500;
  transition: all 0.2s ease;
}

.meta-badge {
  padding: 8rpx 16rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #FF8A3D 0%, #F6A44C 100%);
  color: #fff;
  font-weight: 600;
  font-size: 22rpx;
  box-shadow: 0 4rpx 12rpx rgba(246,164,76,0.3);
  transition: all 0.2s ease;
}

/* ========== 玻璃拟态卡片 ========== */
.glass-card {
  position: relative;
  z-index: 10;
  margin-bottom: 20rpx;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(30rpx) saturate(180%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-emoji {
  font-size: 28rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  letter-spacing: 0.5rpx;
}

.card-arrow {
  font-size: 32rpx;
  font-weight: 300;
  color: rgba(0, 0, 0, 0.3);
}

/* ========== 餐单卡片 ========== */
.meal-preview {
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.meal-flow {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meal-item {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  flex-wrap: wrap;
}

.meal-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.meal-dishes {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.6);
  line-height: 1.6;
}

.meal-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 40rpx 0;
  border: 2rpx dashed rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
}

.placeholder-icon {
  font-size: 48rpx;
  opacity: 0.5;
}

.placeholder-text {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.4);
}

/* AI解释文案样式 */
.meal-explain {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: rgba(174, 194, 224, 0.12);
  border-radius: 12rpx;
  border-left: 3rpx solid rgba(174, 194, 224, 0.5);
  animation: explain-slide-in 600ms ease-out;
}

@keyframes explain-slide-in {
  from {
    opacity: 0;
    transform: translateX(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.explain-icon {
  font-size: 20rpx;
  flex-shrink: 0;
  opacity: 0.7;
}

.explain-text {
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.65);
  line-height: 1.6;
  letter-spacing: 0.3rpx;
  font-style: italic;
}

/* ========== 任务卡片 ========== */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.task-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 18rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  transition: background 0.2s ease;
}

.task-item:active {
  background: rgba(0, 0, 0, 0.04);
}

.task-item.highlight {
  background: rgba(76, 175, 80, 0.08);
  border-left: 3rpx solid rgba(76, 175, 80, 0.6);
}

.task-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.task-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.task-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.task-desc {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.5);
}

.task-arrow {
  font-size: 24rpx;
  font-weight: 300;
  color: rgba(0, 0, 0, 0.25);
}

/* ========== 事件卡片 ========== */
.event-badge {
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.5);
  background: rgba(0, 0, 0, 0.05);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.events-list {
  padding-top: 12rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.event-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  padding: 8rpx 0;
}

.event-item:last-child {
  margin-bottom: 0;
}

.event-date {
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.45);
  flex-shrink: 0;
  width: 120rpx;
}

.event-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #1a1a1a;
  flex: 1;
}

.event-pin {
  font-size: 16rpx;
  flex-shrink: 0;
}

.more-events {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0 8rpx;
  margin-top: 8rpx;
  border-top: 1rpx dashed rgba(0, 0, 0, 0.1);
}

.more-text {
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.45);
}

.more-arrow {
  font-size: 20rpx;
  color: rgba(0, 0, 0, 0.3);
}

/* ========== ✅ 新增：订阅消息入口 ========== */
.sub-entry {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin: 0 0 20rpx;
  padding: 16rpx 24rpx;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.2);
  border-radius: 16rpx;
  font-size: 24rpx;
  color: rgba(0,0,0,0.65);
  transition: all 0.3s ease;
}

.sub-entry:active {
  transform: scale(0.98);
  background: rgba(255,255,255,0.15);
}

.sub-icon {
  font-size: 24rpx;
}

.sub-text {
  font-weight: 500;
}

/* ========== 统一天气动画样式 ========== */
.raindrop-light, .snowflake-light, .hailstone-light {
  position: absolute;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
}

.raindrop-light {
  top: -20rpx;
  width: 1rpx;
  height: 15rpx;
  background: rgba(135, 206, 235, 0.7);
  animation-name: rain-drop;
}

.snowflake-light {
  top: -20rpx;
  width: 4rpx;
  height: 4rpx;
  background: #ffffff;
  border-radius: 50%;
  animation-name: snow-drift;
}

.hailstone-light {
  top: -20rpx;
  width: 5rpx;
  height: 5rpx;
  background: #f0f8ff;
  border-radius: 50%;
  animation-name: hail-bounce;
}

.star-light {
  position: absolute;
  width: 3rpx;
  height: 3rpx;
  background: #ffffff;
  border-radius: 50%;
  animation: star-blink 2s ease-in-out infinite;
}

@keyframes rain-drop {
  to { transform: translateY(120vh); }
}

@keyframes snow-drift {
  to { transform: translateY(120vh) translateX(20rpx); }
}

@keyframes hail-bounce {
  to { transform: translateY(120vh); }
}

@keyframes star-blink {
  0%, 100% { opacity: 0.4; }
  50% { opacity: 1; }
}

/* ========== 夜间模式文字增强 ========== */
.page.night .ai-greeting-top .greeting-text,
.page.night .hero-desc,
.page.night .hero-temp-range,
.page.night .hero-location {
  color: #E6EEF8 !important;
  text-shadow: 0 1px 2px rgba(0,0,0,.45);
}

.page.night .meta-item {
  border-color: rgba(255,255,255,0.15);
  background: rgba(255,255,255,0.08);
  color: rgba(255,255,255,0.85);
}

.page.night .sub-entry {
  color: rgba(255,255,255,0.85);
  border-color: rgba(255,255,255,0.15);
}

.page.rain .ai-greeting-top .greeting-text,
.page.snow .ai-greeting-top .greeting-text,
.page.thunderstorm .ai-greeting-top .greeting-text,
.page.hail .ai-greeting-top .greeting-text,
.page.fog .ai-greeting-top .greeting-text {
  color: #E6EEF8 !important;
  text-shadow: 0 1px 2px rgba(0,0,0,.45);
}

/* V3.4 雪天主题文字对比增强 */
.page.snow .greeting-text,
.page.snow .hero-desc,
.page.snow .location-text,
.page.snow .date-text,
.page.snow .weekday-text,
.page.snow .task-title,
.page.snow .event-title {
  color: rgba(0, 0, 0, 0.88) !important;
  text-shadow: none !important;
}

.page.snow .hero-temp {
  color: #111111 !important;
  text-shadow: 0 1rpx 2rpx rgba(255,255,255,0.3);
}

.page.snow .glass-card {
  background: rgba(255, 255, 255, 0.72) !important;
  border-color: rgba(0, 0, 0, 0.08) !important;
}

.page.snow .meal-explain {
  background: rgba(0, 0, 0, 0.05) !important;
  border-left-color: rgba(0, 0, 0, 0.18) !important;
}

/* ========== 响应式适配 ========== */
@media (max-width: 750rpx) {
  .hero-temp {
    font-size: 76rpx;
  }
  
  .hero-emoji {
    font-size: 68rpx;
  }
  
  .glass-card {
    padding: 24rpx;
  }
  
  .meta-bar {
    gap: 10rpx;
  }
  
  .meta-item,
  .meta-badge {
    font-size: 20rpx;
    padding: 6rpx 12rpx;
  }
}

.meal-simple-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-top: 16rpx;
}

.meal-dish-name {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}