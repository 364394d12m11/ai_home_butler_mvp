}

.budget-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.budget-card {
  padding: 32rpx 16rpx;
  background: rgba(255,255,255,0.3);
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  text-align: center;
  transition: all 300ms ease;
}

.budget-card.active {
  background: rgba(246,164,76,0.15) !important;
  border-color: #F6A44C !important;
  box-shadow: 0 8rpx 24rpx rgba(246,164,76,0.2) !important;
}

.budget-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.budget-desc {
  font-size: 22rpx;
  color: rgba(0,0,0,0.6);
}

/* ========== Á¨¨3È°µÔºöÂÆ°ÁæéËØ≠Ê∞î ========== */
