/* ========== ÂÆ∂Â∫≠Â∏ÆÊâã ========== */
.helper-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.helper-item {
  background: rgba(255,255,255,0.2);
  border-radius: 16rpx;
  padding: 24rpx;
}

.helper-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.helper-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.helper-emoji {
  font-size: 32rpx;
}

.helper-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.helper-hint {
  font-size: 22rpx;
  color: rgba(0,0,0,0.4);
}

.helper-details {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0,0,0,0.1);
}

.detail-row {
  margin-bottom: 20rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.detail-label.required::after {
  content: '*';
  color: #FF4757;
  margin-left: 4rpx;
}

.freq-options {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

/* ========== ÂÆ†Áâ© ========== */
.pet-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pet-question {
  font-size: 26rpx;
  color: #666;
}

/* ========== üî• Êñ∞Â¢ûÔºöËèúÁ≥ªÂÅèÂ•Ω ========== */
.cuisine-hint {
  font-size: 22rpx;
  color: rgba(0,0,0,0.5);
  margin-bottom: 16rpx;
  text-align: right;
}

.cuisine-grid {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.cuisine-tag {
  padding: 14rpx 20rpx;
  background: rgba(255,255,255,0.5);
  border: 2rpx solid rgba(246,164,76,0.2);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 250ms ease;
  cursor: pointer;
}

.cuisine-tag.active {
  background: linear-gradient(135deg, #F6A44C 0%, #FF8A3D 100%) !important;
  color: white !important;
  border-color: #F6A44C !important;
  box-shadow: 0 4rpx 12rpx rgba(246,164,76,0.3) !important;
  transform: scale(1.05);
  font-weight: 600 !important;
}

/* ========== Á¨¨2È°µÔºöÈ•ÆÈ£üÂÅèÂ•Ω ========== */
.diet-goals-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.goal-card {
  background: rgba(255, 255, 255, 0.6);
  border: 2rpx solid rgba(246,164,76,0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 300ms ease;
}

.goal-card.active {
  background: rgba(246,164,76,0.25) !important;
  border-color: #F6A44C !important;
  box-shadow: 0 4rpx 12rpx rgba(246,164,76,0.3) !important;
