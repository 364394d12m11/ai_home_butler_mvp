}

.goal-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.goal-desc {
  font-size: 22rpx;
  color: rgba(0,0,0,0.6);
}

.taste-section {
  margin-bottom: 24rpx;
}

.taste-label {
  font-size: 24rpx;
