.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fefbf8 0%, #faf9f6 100%);
  padding: 32rpx 32rpx 200rpx 32rpx;
  font-family: -apple-system, "PingFang SC", sans-serif;
}

/* ========== Â§¥ÈÉ® ========== */
.header {
  text-align: center;
  margin-bottom: 48rpx;
}

.main-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1B1B1F;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(0,0,0,0.6);
  margin-bottom: 32rpx;
}

.progress-dots {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(246,164,76,0.3);
  transition: all 300ms ease;
}

.dot.active {
  background: #F6A44C;
  transform: scale(1.2);
}

/* ========== Ê≠•È™§ÂÜÖÂÆπ ========== */
.step-content {
  opacity: 1;
  transition: all 400ms ease;
  padding-bottom: 120rpx;
}

.step-content.hidden {
  opacity: 0;
  pointer-events: none;
  position: absolute;
  top: -9999rpx;
}

.step-content.active {
  opacity: 1;
  pointer-events: auto;
  position: relative;
  top: 0;
}

/* ========== Âç°ÁâáÂÆπÂô® ========== */
.card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(40rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.1);
}

.card.compact {
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1B1B1F;
  margin-bottom: 24rpx;
}

.section-title-small {
  font-size: 26rpx;
  font-weight: 600;
  color: #1B1B1F;
  margin-bottom: 16rpx;
}

/* ========== ‰ΩçÁΩÆÈÄâÊã© ========== */
.location-status {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.location-status.pending {
  background: rgba(246,164,76,0.08);
}

.location-status.success {
  background: rgba(76,175,80,0.08);
  flex-direction: column;
  align-items: flex-start;
  gap: 6rpx;
}

.location-status.failed {
  background: rgba(244,67,54,0.08);
}

.location-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #2E7D32;
}

.location-tip {
  font-size: 20rpx;
  color: rgba(0,0,0,0.45);
}

.region-picker-compact {
  width: 100%;
}

.picker-btn-compact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 16rpx;
  background: rgba(255,255,255,0.4);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255,255,255,0.6);
}

.picker-label {
  font-size: 24rpx;
  color: #666;
}

.picker-arrow {
  font-size: 28rpx;
  color: rgba(0,0,0,0.3);
}

/* ========== ÂÆ∂Â∫≠ÊàêÂëò ========== */
.family-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.family-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  background: rgba(255,255,255,0.3);
  border: 2rpx solid transparent;
  border-radius: 20rpx;
  transition: all 300ms ease;
}

.family-card.active {
  background: rgba(246,164,76,0.15) !important;
  border-color: #F6A44C !important;
  box-shadow: 0 8rpx 24rpx rgba(246,164,76,0.2) !important;
}

.family-emoji {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.family-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

/* ========== Â≠êÈÄâÈ°π ========== */
.sub-options {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0,0,0,0.1);
}

.sub-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* ========== ÈÄöÁî®ÊåâÈíÆ ========== */
.option-btn {
  padding: 16rpx 24rpx;
  background: rgba(255,255,255,0.4);
  border: 1rpx solid rgba(255,255,255,0.6);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 200ms ease;
  text-align: center;
  min-width: 80rpx;
  display: inline-block;
}

.option-btn.active {
  background: #F6A44C !important;
  color: white !important;
