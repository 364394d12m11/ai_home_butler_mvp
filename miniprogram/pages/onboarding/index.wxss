/* pages/onboarding/index.wxss - 玻璃拟态风格 */

/* ========== 基础页面 ========== */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F4F8 0%, #F5F9FA 100%);
  padding: 32rpx 24rpx 140rpx;
  font-family: -apple-system, "PingFang SC", sans-serif;
  animation: page-fade-in 600ms ease-out;
}

@keyframes page-fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* ========== 头部 ========== */
.header {
  text-align: center;
  margin-bottom: 48rpx;
  animation: header-slide-down 800ms ease-out 200ms both;
}

@keyframes header-slide-down {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.main-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1B1B1F;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
}

.subtitle {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(0,0,0,0.5);
  letter-spacing: 0.5rpx;
}

/* ========== 内容区 ========== */
.step-content {
  opacity: 1;
  padding-bottom: 40rpx;
  animation: content-fade-in 800ms ease-out 400ms both;
}

@keyframes content-fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 玻璃拟态卡片 ========== */
.card {
  position: relative;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(30rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: card-zoom-in 600ms ease-out both;
}

@keyframes card-zoom-in {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.card.compact {
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1B1B1F;
  margin-bottom: 20rpx;
  letter-spacing: 0.5rpx;
}

/* ========== 位置选择 ========== */
.location-status {
  display: flex;
  align-items: center;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.02);
}

.location-status.pending {
  background: rgba(246,164,76,0.08);
}

.location-status.success {
  background: rgba(76,175,80,0.08);
  flex-direction: column;
  align-items: flex-start;
  gap: 6rpx;
}

.location-status.failed {
  background: rgba(244,67,54,0.08);
}

.location-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.location-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #2E7D32;
}

.location-tip {
  font-size: 20rpx;
  color: rgba(0,0,0,0.45);
}

.region-picker-compact {
  width: 100%;
}

.picker-btn-compact {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 16rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.picker-btn-compact:active {
  background: rgba(0, 0, 0, 0.04);
}

.picker-label {
  font-size: 24rpx;
  color: #666;
}

.picker-arrow {
  font-size: 28rpx;
  color: rgba(0,0,0,0.3);
}

/* ========== 家庭成员 ========== */
.family-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.family-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 16rpx;
  background: rgba(0, 0, 0, 0.02);
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.family-card:active {
  transform: scale(0.98);
}

.family-card.active {
  background: rgba(174, 194, 224, 0.15) !important;
  border-color: rgba(174, 194, 224, 0.5) !important;
  box-shadow: 0 4rpx 16rpx rgba(174, 194, 224, 0.2) !important;
  transform: scale(1.02);
}

.family-emoji {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.1));
}

.family-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

/* ========== 子选项 ========== */
.sub-options {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0,0,0,0.05);
}

.sub-title {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0,0,0,0.6);
  margin-bottom: 12rpx;
}

/* ========== 通用按钮 ========== */
.option-btn {
  padding: 12rpx 20rpx;
  background: rgba(0, 0, 0, 0.02);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.2s ease;
  text-align: center;
  min-width: 80rpx;
  display: inline-block;
}

.option-btn:active {
  background: rgba(0, 0, 0, 0.04);
}

.option-btn.active {
  background: rgba(174, 194, 224, 0.2) !important;
  color: #1a1a1a !important;
  border-color: rgba(174, 194, 224, 0.5) !important;
  box-shadow: 0 2rpx 8rpx rgba(174, 194, 224, 0.2) !important;
  font-weight: 600 !important;
}

.gender-options,
.count-options {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

/* ========== 孩子详情 ========== */
.children-details {
  margin-top: 16rpx;
}

.child-item {
  padding: 20rpx;
  background: rgba(255,255,255,0.3);
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid rgba(255,255,255,0.5);
}

.child-header {
  font-size: 24rpx;
  color: rgba(174, 194, 224, 0.8);
  font-weight: 600;
  margin-bottom: 12rpx;
}

.age-picker-container {
  margin-top: 12rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 12rpx;
  padding: 16rpx;
}

.age-display {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  text-align: center;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
  font-size: 24rpx;
  color: #333;
}

.child-gender {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  gap: 12rpx;
}

.gender-label {
  font-size: 22rpx;
  color: #666;
  min-width: 80rpx;
}

.gender-btn {
  padding: 8rpx 16rpx;
  background: rgba(0, 0, 0, 0.02);
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #666;
  transition: all 200ms ease;
  text-align: center;
  min-width: 60rpx;
}

.gender-btn.active {
  background: rgba(174, 194, 224, 0.2) !important;
  color: #1a1a1a !important;
  border-color: rgba(174, 194, 224, 0.5) !important;
}

/* ========== 家庭帮手 ========== */
.helper-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.helper-item {
  background: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  padding: 20rpx;
  transition: background 0.2s ease;
}

.helper-item:active {
  background: rgba(0, 0, 0, 0.04);
}

.helper-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.helper-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.helper-emoji {
  font-size: 32rpx;
}

.helper-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
}

.helper-details {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(0,0,0,0.05);
}

.detail-row {
  margin-bottom: 16rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.detail-label.required::after {
  content: '*';
  color: #FF4757;
  margin-left: 4rpx;
}

.freq-options {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

/* ========== AI语气 ========== */
.tone-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tone-card {
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.02);
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 16rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tone-card:active {
  transform: scale(0.98);
}

.tone-card.active {
  background: rgba(174, 194, 224, 0.15) !important;
  border-color: rgba(174, 194, 224, 0.5) !important;
  box-shadow: 0 4rpx 16rpx rgba(174, 194, 224, 0.2) !important;
}

.tone-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 6rpx;
}

.tone-sample {
  font-size: 22rpx;
  color: rgba(0,0,0,0.5);
  font-style: italic;
  line-height: 1.6;
}

/* ========== 底部按钮 ========== */
.bottom-actions {
  position: relative;
  display: flex;
  gap: 24rpx;
  padding: 16rpx 0;
  margin-top: 16rpx;
}

.btn-primary {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: rgba(174, 194, 224, 0.9);
  color: #1a1a1a;
  box-shadow: 0 8rpx 24rpx rgba(174, 194, 224, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(174, 194, 224, 0.4);
}

/* ========== 响应式适配 ========== */
@media (max-width: 750rpx) {
  .section-title {
    font-size: 28rpx;
  }
  
  .card {
    padding: 24rpx;
  }
}