}

/* ========== Â∫ïÈÉ®ÊåâÈíÆ ========== */
.bottom-actions {
  position: relative;
  display: flex;
  gap: 24rpx;
  padding: 32rpx 0;
  margin-top: 48rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 300ms ease;
}

.btn-primary {
  background: linear-gradient(135deg, #F6A44C 0%, #FF8A3D 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(246,164,76,0.3);
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-secondary {
  background: rgba(255,255,255,0.8);
  color: #666;
  border: 2rpx solid rgba(0,0,0,0.1);
}

.btn-secondary:active {
  transform: scale(0.98);
}