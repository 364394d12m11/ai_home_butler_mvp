  box-shadow: 0 4rpx 12rpx rgba(246,164,76,0.4) !important;
  font-weight: 600 !important;
}

.gender-options,
.count-options {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

/* ========== Â≠©Â≠êËØ¶ÊÉÖ ========== */
.children-details {
  margin-top: 16rpx;
}

.child-item {
  padding: 20rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.child-header {
  font-size: 24rpx;
  color: #F6A44C;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.age-picker-container {
  margin-top: 12rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 12rpx;
  padding: 16rpx;
}

.age-display {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
  text-align: center;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
  font-size: 24rpx;
  color: #333;
}

.child-gender {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  gap: 12rpx;
}

.gender-label {
  font-size: 22rpx;
  color: #666;
  min-width: 80rpx;
}

.gender-btn {
  padding: 8rpx 16rpx;
  background: rgba(255,255,255,0.3);
  border: 1rpx solid rgba(255,255,255,0.5);
  border-radius: 8rpx;
  font-size: 20rpx;
  color: #666;
  transition: all 200ms ease;
  text-align: center;
  min-width: 60rpx;
}

.gender-btn.active {
