}

.taboo-input {
  width: 100%;
  padding: 16rpx;
  background: rgba(255,255,255,0.4);
  border: 1rpx solid rgba(255,255,255,0.6);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #333;
}

.rhythm-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.rhythm-label {
  font-size: 24rpx;
