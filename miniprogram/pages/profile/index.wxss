/* pages/profile/index.wxss - V4.1设置中心样式 */

.profile-page {
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  min-height: 100vh;
  padding: 32rpx 24rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* ========== 用户信息卡片 ========== */
.user-card {
  background: linear-gradient(135deg, #ff9933 0%, #ffaa55 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 153, 51, 0.2);
  animation: card-slide-in 600ms ease-out;
}

@keyframes card-slide-in {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  backdrop-filter: blur(10rpx);
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  letter-spacing: 0.5rpx;
}

.user-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

.user-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
  transition: all 200ms ease;
}

.user-action:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.action-text {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
}

.action-arrow {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* ========== 设置容器 ========== */
.settings-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.setting-group {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  animation: group-fade-in 600ms ease-out;
}

@keyframes group-fade-in {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  padding: 24rpx 24rpx 16rpx;
  letter-spacing: 0.5rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 200ms ease;
  min-height: 88rpx;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: rgba(0, 0, 0, 0.02);
}

.setting-item.danger {
  background: rgba(255, 68, 68, 0.02);
}

.setting-item.danger:active {
  background: rgba(255, 68, 68, 0.05);
}

.setting-item.danger .item-title {
  color: #ff4444;
}

.item-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.item-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.item-desc {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.5);
  font-weight: 400;
  line-height: 1.3;
}

.item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.item-value {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.item-arrow {
  font-size: 24rpx;
  color: #ccc;
  font-weight: 300;
}

/* ========== 开关样式覆盖 ========== */
switch {
  transform: scale(0.9);
}

/* ========== 响应式适配 ========== */
@media (max-width: 375px) {
  .profile-page {
    padding: 24rpx 20rpx;
  }
  
  .user-card {
    padding: 24rpx;
  }
  
  .user-avatar {
    width: 64rpx;
    height: 64rpx;
    margin-right: 20rpx;
  }
  
  .avatar-text {
    font-size: 28rpx;
  }
  
  .user-name {
    font-size: 28rpx;
  }
  
  .setting-item {
    padding: 16rpx 20rpx;
    min-height: 80rpx;
  }
  
  .item-title {
    font-size: 26rpx;
  }
}

/* ========== 暗色模式支持 ========== */
@media (prefers-color-scheme: dark) {
  .profile-page {
    background: linear-gradient(180deg, #1a1a1a 0%, #2a2a2a 100%);
  }
  
  .setting-group {
    background: #333;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
  }
  
  .group-title {
    color: #eee;
  }
  
  .item-title {
    color: #eee;
  }
  
  .item-desc {
    color: rgba(255, 255, 255, 0.6);
  }
  
  .item-value {
    color: #bbb;
  }
  
  .setting-item {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  
  .setting-item:active {
    background: rgba(255, 255, 255, 0.05);
  }
}