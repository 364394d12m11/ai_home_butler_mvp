/* pages/diet/index.wxss - V4.0升级版（保留原有设计系统+新增角色样式） */

/* CSS 变量定义 */
:root, page {
  --color-primary: #F6A44C;
  --color-secondary: #BCA9F5;
  --text-primary: #333;
  --text-secondary: #666;
  --text-tertiary: #999;
  --text-quaternary: #ccc;
  --text-white: #FFFFFF;
  --surface-main: #FFFFFF;
  --surface-elevated: #F8F9FA;
  --border-subtle: #E0E0E0;
  --spacing-card: 32rpx;
  --spacing-inner: 24rpx;
  --spacing-tight: 16rpx;
  --spacing-section: 48rpx;
  --radius-lg: 16rpx;
  --radius-sm: 8rpx;
  --font-body: 28rpx;
  --font-sub: 24rpx;
  --font-caption: 22rpx;
  --font-h2: 32rpx;
  --weight-regular: 400;
  --weight-bold: 600;
  --duration-fast: 0.3s;
  --timing-gentle: ease;
  --shadow-card: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 全局设计系统 */
.page {
  background: linear-gradient(180deg, #fefbf8 0%, #faf9f6 100%);
  min-height: 100vh;
  font-family: -apple-system, "PingFang SC", sans-serif;
  padding: 32rpx;
}

/* 通用过渡效果 */
.transition-smooth {
  transition: all 300ms cubic-bezier(0.4,0,0.2,1);
}

/* 头部信息 - V4.0升级显示角色 */
.header {
  text-align: center;
  margin-bottom: 56rpx;
  animation: fadeUp 400ms ease-out;
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(24rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.date-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 16rpx;
}

.main-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1B1B1F;
  letter-spacing: -0.4rpx;
}

.date-text {
  font-size: 24rpx;
  color: rgba(0,0,0,0.7);
  font-weight: 400;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
  line-height: 1.5;
}

/* 布局模式切换器（调试用） */
.layout-switcher {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
  padding: 8rpx;
  background: rgba(255,255,255,0.5);
  border-radius: 16rpx;
}

.switch-item {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  transition: all 200ms ease;
}

.switch-item.active {
  background: #F6A44C;
  color: white;
}

/* ========== A) 摘要模式 ========== */
.summary-layout {
  margin-bottom: 56rpx;
}

.summary-card {
  background: rgba(255,255,255,0.75);
  backdrop-filter: blur(14rpx);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04);
}

.summary-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.06);
  transition: all 200ms ease;
}

.summary-row:last-child {
  border-bottom: none;
}

.summary-row:active {
  background: rgba(246,164,76,0.08);
  transform: scale(0.98);
}

.row-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.summary-row .meal-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #F6A44C;
  min-width: 80rpx;
}

.summary-row .dish-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.summary-row .time-text {
  font-size: 22rpx;
  color: rgba(0,0,0,0.7);
  font-weight: 400;
}

.row-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

/* ========== B) Wallet横滑卡片 ========== */
.wallet-layout {
  margin-bottom: 56rpx;
}

.wallet-swiper {
  height: 280rpx;
  margin-bottom: 24rpx;
}

.wallet-slide {
  padding: 0 8rpx;
}

.wallet-card {
  height: 260rpx;
  background: rgba(255,255,255,0.88);
  backdrop-filter: blur(24rpx);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  transition: all 200ms ease;
}

.wallet-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #F6A44C;
}

.card-people {
  font-size: 20rpx;
  color: rgba(0,0,0,0.7);
  margin-left: 8rpx;
}

.card-more {
  margin-left: auto;
}

.more-text {
  font-size: 22rpx;
  color: #F6A44C;
  font-weight: 500;
}

.card-dishes {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.card-dish {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-dish .dish-emoji {
  font-size: 28rpx;
}

.card-dish .dish-name {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

.card-footer {
  margin-top: 16rpx;
  text-align: center;
}

.total-time {
  font-size: 20rpx;
  color: rgba(0,0,0,0.7);
  font-weight: 400;
}

/* Page Control */
.page-control {
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.page-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(0,0,0,0.2);
  transition: all 200ms ease;
}

.page-dot.active {
  background: #F6A44C;
  width: 24rpx;
  border-radius: 6rpx;
}

/* ========== C) 分段控件Tabs ========== */
.tabs-layout {
  margin-bottom: 56rpx;
}

.tabs-control {
  display: flex;
  background: rgba(255,255,255,0.6);
  border-radius: 16rpx;
  padding: 6rpx;
  margin-bottom: 32rpx;
  backdrop-filter: blur(12rpx);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 12rpx;
  transition: all 250ms ease;
}

.tab-item.active {
  background: white;
  color: #F6A44C;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.tabs-content {
  background: rgba(255,255,255,0.75);
  backdrop-filter: blur(14rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04);
}

/* ========== D) 精致列表（原版） ========== */
.detail-layout {
  margin-bottom: 56rpx;
}

.menu-content {
  background: rgba(255,255,255,0.75);
  backdrop-filter: blur(14rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04);
}

.meal-section {
  margin-bottom: 32rpx;
}

.meal-section:last-child {
  margin-bottom: 0;
}

.meal-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.meal-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #F6A44C;
}

.meal-people {
  font-size: 22rpx;
  color: rgba(0,0,0,0.7);
  font-weight: 400;
}

.dish-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dish-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.dish-emoji {
  font-size: 32rpx;
  margin-right: 16rpx;
}


.dish-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.dish-meta {
  font-size: 22rpx;
  color: rgba(0,0,0,0.7);
  font-weight: 400;
}

/* ========== V4.0主要按钮区（角色差异化） ========== */
.primary-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 56rpx;
}

.action-btn {
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 120ms ease;
  position: relative;
}

/* V4.0新增：角色差异化主按钮 */
.action-btn.role-primary {
  background: linear-gradient(135deg, #F6A44C 0%, #FF8C42 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(246,164,76,0.3);
  font-size: 30rpx;
  height: 96rpx;
}

.action-btn.role-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(246,164,76,0.2);
}

.action-btn.secondary {
  background: rgba(255,255,255,0.88);
  color: #666;
  backdrop-filter: blur(12rpx);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.action-btn.secondary:active {
  transform: scale(0.98);
  background: rgba(255,255,255,1);
}

/* V4.0新增：购物清单按钮 */
.action-btn.shopping {
  background: linear-gradient(135deg, #4CAF50 0%, #45A047 100%);
  color: white;
  box-shadow: 0 3rpx 12rpx rgba(76,175,80,0.25);
}

.action-btn.shopping:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(76,175,80,0.2);
}

.action-btn.success {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: white;
  box-shadow: 0 3rpx 12rpx rgba(33,150,243,0.25);
}

.action-btn.success:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(33,150,243,0.2);
}

/* ========== 智能任务区 ========== */
.task-section {
  margin-bottom: 32rpx;
}

.task-card {
  background: rgba(248,249,251,0.8);
  backdrop-filter: blur(8rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  transition: all 200ms ease;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.task-card:last-child {
  margin-bottom: 0;
}

.task-card:active {
  transform: scale(0.98);
  background: rgba(240,241,243,0.9);
}

.task-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.task-content {
  flex: 1;
}

.task-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
  display: block;
}

.task-desc {
  font-size: 22rpx;
  color: #666;
  font-weight: 400;
}

.task-action {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.action-text {
  font-size: 22rpx;
  color: #F6A44C;
  font-weight: 500;
}

.arrow {
  font-size: 18rpx;
  color: #F6A44C;
}

/* ========== V4.0购物清单弹层 ========== */
.shopping-sheet-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.3);
  backdrop-filter: blur(6rpx);
  z-index: 300;
  animation: fadeIn 300ms cubic-bezier(0.2,0.7,0.2,1);
}

.shopping-sheet {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 80vh;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(0,0,0,0.12);
  animation: slideUpSheet 300ms cubic-bezier(0.2,0.7,0.2,1);
}

.shopping-sheet .sheet-header {
  position: relative;
  padding: 24rpx 32rpx 16rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(0,0,0,0.06);
  background: linear-gradient(180deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,1) 100%);
}

.shopping-sheet .sheet-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.shopping-sheet .sheet-close {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0,0,0,0.06);
  border: none;
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.shopping-sheet .sheet-content {
  max-height: 60vh;
  padding: 0 32rpx 32rpx;
}

/* V4.0购物清单列表 */
.shopping-list {
  padding-top: 24rpx;
}

.shopping-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.04);
  transition: all 200ms ease;
}

.shopping-item:active {
  background: rgba(0,0,0,0.02);
  margin: 0 -32rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}

.shopping-item:last-child {
  border-bottom: none;
}

.item-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid rgba(0,0,0,0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  transition: all 200ms ease;
  flex-shrink: 0;
}

.item-checkbox.checked {
  background: #4CAF50;
  border-color: #4CAF50;
}

.check-mark {
  color: white;
  font-size: 24rpx;
  font-weight: 600;
}

.item-info {
  flex: 1;
  margin-right: 12rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 4rpx;
  display: block;
  transition: all 200ms ease;
}

.item-name.completed {
  color: rgba(0,0,0,0.4);
  text-decoration: line-through;
}

.item-amount {
  font-size: 22rpx;
  color: rgba(0,0,0,0.6);
  font-weight: 400;
}

.item-category {
  font-size: 20rpx;
  background: rgba(246, 164, 76, 0.12);
  color: #F6A44C;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

/* 购物清单空状态 */
.shopping-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  gap: 16rpx;
}

.shopping-empty .empty-icon {
  font-size: 64rpx;
  opacity: 0.3;
}

.shopping-empty .empty-text {
  font-size: 26rpx;
  color: rgba(0,0,0,0.4);
  font-weight: 500;
}

/* V4.0购物清单底部操作 */
.sheet-actions {
  padding: 24rpx 0;
  border-top: 1rpx solid rgba(0,0,0,0.06);
  margin-top: 24rpx;
}

.sheet-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 200ms ease;
}

.sheet-btn.primary {
  background: linear-gradient(135deg, #F6A44C 0%, #FF8C42 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(246,164,76,0.3);
}

.sheet-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(246,164,76,0.2);
}

/* ========== 菜单详情弹层 ========== */
.menu-sheet-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.2);
  backdrop-filter: blur(6rpx);
  z-index: 200;
  animation: fadeIn 300ms cubic-bezier(0.2,0.7,0.2,1);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.menu-sheet {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 75vh;
  background: white;
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(0,0,0,0.1);
  animation: slideUpSheet 300ms cubic-bezier(0.2,0.7,0.2,1);
}

@keyframes slideUpSheet {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.menu-sheet .sheet-header {
  position: relative;
  padding: 24rpx 32rpx 12rpx;
  text-align: center;
  background: linear-gradient(180deg, rgba(255,255,255,0.7) 0%, rgba(255,255,255,0.95) 100%);
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.sheet-handle {
  width: 80rpx;
  height: 8rpx;
  background: rgba(0,0,0,0.1);
  border-radius: 4rpx;
  margin: 0 auto 20rpx;
}

.menu-sheet .sheet-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.menu-sheet .sheet-close {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx 16rpx;
  background: rgba(0,0,0,0.05);
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 200ms ease;
}

.menu-sheet .sheet-close:active {
  background: rgba(0,0,0,0.1);
  transform: translateY(-50%) scale(0.95);
}

.menu-sheet .sheet-content {
  max-height: 60vh;
  padding: 0 32rpx 32rpx;
}

.sheet-meal-section {
  margin-bottom: 32rpx;
}

.sheet-meal-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin: 24rpx 0 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.sheet-meal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #F6A44C;
}

.sheet-meal-subtitle {
  font-size: 20rpx;
  color: rgba(0,0,0,0.7);
  font-weight: 400;
}

.sheet-dish-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.sheet-dish-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-radius: 12rpx;
  transition: all 200ms ease;
}

.sheet-dish-item:active {
  background: rgba(0,0,0,0.02);
}

.sheet-dish-main {
  display: flex;
  align-items: center;
  flex: 1;
}

.sheet-dish-emoji {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.sheet-dish-info {
  flex: 1;
}

.sheet-dish-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
  display: block;
}

.sheet-dish-tags {
  display: flex;
  gap: 8rpx;
}

.sheet-tag {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 400;
}

.sheet-tag.time {
  background: rgba(72,184,120,0.1);
  color: #48B878;
}

.sheet-tag.cost {
  background: rgba(100,116,139,0.1);
  color: #64748B;
}

.sheet-dish-replace {
  padding: 8rpx 16rpx;
  background: rgba(246,164,76,0.1);
  border: 1rpx solid rgba(246,164,76,0.2);
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #F6A44C;
  font-weight: 500;
  transition: all 200ms ease;
}

.sheet-dish-replace:active {
  background: rgba(246,164,76,0.2);
  transform: scale(0.95);
}

/* ========== V3.3 AI解释卡片样式 ========== */
.explain-card {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin: 24rpx 32rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, rgba(174, 194, 224, 0.08), rgba(174, 194, 224, 0.15));
  border-radius: 16rpx;
  border-left: 4rpx solid rgba(174, 194, 224, 0.6);
  animation: explain-fade-in 800ms ease-out;
  box-shadow: 0 4rpx 16rpx rgba(174, 194, 224, 0.08);
}

@keyframes explain-fade-in {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.explain-icon {
  font-size: 28rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
  opacity: 0.7;
}

.explain-text {
  flex: 1;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 0.7);
  line-height: 1.6;
  letter-spacing: 0.3rpx;
  font-style: italic;
}

/* ========== 响应式适配 ========== */
@media (max-width: 375px) {
  .page {
    padding: 24rpx;
  }
  
  .wallet-card {
    height: 240rpx;
    padding: 20rpx;
  }
  
