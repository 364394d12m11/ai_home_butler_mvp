.page{padding:24rpx}
.bar{display:flex;flex-wrap:wrap;gap:12rpx;margin-bottom:16rpx}
.pill{background:#fff;border-radius:999rpx;padding:10rpx 18rpx}
.btn{background:#1677ff;color:#fff;border-radius:12rpx;padding:0 22rpx;line-height:62rpx}
.card{display:flex;background:#fff;border-radius:16rpx;overflow:hidden}
.cover{width:280rpx;height:220rpx;background:#eee}
.meta{flex:1;padding:18rpx}
.title{font-weight:700;font-size:32rpx}
.sub{color:#888;margin-top:8rpx}
.desc{color:#333;margin-top:12rpx;line-height:40rpx}
.empty,.loading{text-align:center;color:#999;margin-top:40rpx}
