.page{ padding:24rpx; background:#f8f9fa; min-height:100vh; }

.progress-bar{ 
  display:flex; background:white; border-radius:16rpx; 
  padding:24rpx; margin-bottom:24rpx;
}
.progress-step{ 
  flex:1; text-align:center; position:relative;
  padding:16rpx 8rpx;
}
.progress-step:not(:last-child)::after{
  content:''; position:absolute; right:-50%; top:50%;
  width:100%; height:2rpx; background:#ddd; z-index:1;
}
.progress-step.active .step-number{ background:#667eea; color:white; }
.progress-step.active::after{ background:#667eea; }
.step-number{ 
  display:block; width:48rpx; height:48rpx; border-radius:50%;
  background:#ddd; color:#666; line-height:48rpx; margin:0 auto 8rpx;
  font-size:24rpx; font-weight:600; position:relative; z-index:2;
}
.step-name{ font-size:22rpx; color:#666; }

.step-content{ background:white; border-radius:20rpx; padding:32rpx; margin-bottom:24rpx; }
.step-header{ text-align:center; margin-bottom:32rpx; }
.step-title{ display:block; font-size:32rpx; font-weight:600; margin-bottom:8rpx; }
.step-desc{ color:#666; font-size:26rpx; }


.param-item{ margin-bottom:32rpx; }
.param-label{ display:block; font-size:28rpx; font-weight:600; margin-bottom:16rpx; }

.counter-group{ display:flex; gap:24rpx; }
.counter{ flex:1; }
.counter-label{ display:block; font-size:24rpx; color:#666; margin-bottom:12rpx; }
.counter-control{ 
  display:flex; align-items:center; justify-content:center; gap:16rpx;
  background:#f5f5f5; border-radius:12rpx; padding:16rpx;
}
.counter-btn{ 
  width:48rpx; height:48rpx; border-radius:50%; background:#667eea; color:white;
  display:flex; align-items:center; justify-content:center; font-size:28rpx;
}
.counter-value{ font-size:28rpx; font-weight:600; min-width:32rpx; text-align:center; }

.meal-options{ display:flex; gap:16rpx; }
.meal-option{ 
  flex:1; background:#f5f5f5; border-radius:12rpx; padding:20rpx; text-align:center;
  border:3rpx solid transparent;
}
.meal-option.selected{ background:#e6f7ff; border-color:#1890ff; }
.meal-icon{ display:block; font-size:32rpx; margin-bottom:8rpx; }
.meal-name{ font-size:24rpx; color:#333; }

.dish-count-options{ display:flex; gap:12rpx; }
.count-option{ 
  flex:1; background:#f5f5f5; border-radius:12rpx; padding:16rpx; text-align:center;
  font-size:24rpx; border:2rpx solid transparent;
}
.count-option.selected{ background:#e6f7ff; border-color:#1890ff; color:#1890ff; }


.meal-tabs{ 
  display:flex; background:#f5f5f5; border-radius:12rpx; padding:6rpx; margin-bottom:24rpx;
}
.meal-tab{ 
  flex:1; text-align:center; padding:16rpx; border-radius:8rpx; font-size:26rpx;
  color:#666; transition:all 0.3s;
}
.meal-tab.active{ background:white; color:#667eea; font-weight:600; }


.selection-header{ 
  display:flex; justify-content:space-between; align-items:center; margin-bottom:20rpx;
}
.selection-title{ font-size:28rpx; font-weight:600; }
.regenerate-btn{ 
  background:#f0f0f0; color:#666; border-radius:8rpx; padding:8rpx 16rpx; font-size:24rpx;
}

.dish-grid{ display:grid; grid-template-columns:1fr 1fr; gap:16rpx; margin-bottom:20rpx; }
.dish-candidate{ 
  background:#f8f9fa; border-radius:12rpx; padding:20rpx; border:2rpx solid #eee;
  position:relative; transition:all 0.3s;
}
.dish-candidate.locked{ border-color:#fa8c16; background:#fff7e6; }
.dish-header{ display:flex; justify-content:space-between; align-items:center; margin-bottom:12rpx; }
.dish-emoji{ font-size:32rpx; }
.lock-icon, .select-icon{ font-size:20rpx; }
.dish-name{ display:block; font-size:26rpx; font-weight:600; margin-bottom:8rpx; }
.dish-meta{ display:flex; gap:12rpx; margin-bottom:8rpx; }
.dish-time{ font-size:22rpx; color:#666; }
.dish-cost{ font-size:22rpx; padding:2rpx 6rpx; border-radius:4rpx; }
.dish-cost.cost-L{ background:#f6ffed; color:#52c41a; }
.dish-cost.cost-M{ background:#fff7e6; color:#fa8c16; }
.dish-cost.cost-H{ background:#fff1f0; color:#f5222d; }
.dish-tags{ display:flex; flex-wrap:wrap; gap:6rpx; }
.dish-tag{ 
  background:#e6f7ff; color:#1890ff; font-size:20rpx; 
  padding:2rpx 6rpx; border-radius:4rpx;
}

.selection-tips{ text-align:center; margin-top:16rpx; }
.tip-text{ font-size:22rpx; color:#999; }

.step-actions{ 
  display:flex; gap:16rpx; margin-top:32rpx; 
  position:sticky; bottom:24rpx; z-index:10;
}
.prev-btn, .next-btn, .finish-btn{ 
  flex:1; padding:24rpx; border-radius:12rpx; font-size:28rpx; font-weight:600;
}
.prev-btn{ background:#f5f5f5; color:#666; }
.next-btn, .finish-btn{ background:#667eea; color:white; }
.next-btn:disabled{ background:#ddd; color:#999; }

.shopping-summary{ 
  display:flex; gap:24rpx; background:#f8f9fa; border-radius:12rpx; 
  padding:24rpx; margin-bottom:24rpx;
}
.summary-item{ flex:1; text-align:center; }
.summary-label{ display:block; font-size:24rpx; color:#666; margin-bottom:8rpx; }
.summary-value{ font-size:32rpx; font-weight:600; color:#333; }


.category-section{ margin-bottom:24rpx; }
.category-header{ 
  display:flex; justify-content:space-between; align-items:center;
  margin-bottom:16rpx; padding-bottom:8rpx; border-bottom:2rpx solid #f0f0f0;
}
.category-name{ font-size:28rpx; font-weight:600; }
.category-count{ font-size:24rpx; color:#999; }

.shopping-item{ 
  display:flex; align-items:center; padding:16rpx 0;
  border-bottom:1rpx solid #f5f5f5;
}
.item-name{ flex:1; font-size:26rpx; }
.item-spec{ color:#666; font-size:24rpx; margin:0 16rpx; }
.item-price{ color:#f5222d; font-size:26rpx; font-weight:600; margin-right:16rpx; }
.remove-item{ background:#fff1f0; color:#f5222d; border-radius:6rpx; padding:6rpx 12rpx; font-size:22rpx; }

.inventory-excluded{ 
  background:#f6ffed; border:2rpx solid #b7eb8f; border-radius:12rpx; 
  padding:20rpx; margin-bottom:24rpx;
}
.excluded-header{ margin-bottom:12rpx; }
.excluded-title{ font-size:26rpx; color:#52c41a; font-weight:600; }
.excluded-list{ display:flex; flex-wrap:wrap; gap:8rpx; }
.excluded-item{ 
  background:#52c41a; color:white; font-size:22rpx;
  padding:4rpx 8rpx; border-radius:6rpx;
}


.option-group{ margin-bottom:32rpx; }
.group-title{ display:block; font-size:28rpx; font-weight:600; margin-bottom:16rpx; }

.purchase-methods{ display:flex; gap:16rpx; }
.method-option{ 
  flex:1; background:#f5f5f5; border-radius:12rpx; padding:24rpx; text-align:center;
  border:2rpx solid transparent;
}
.method-option.selected{ background:#e6f7ff; border-color:#1890ff; }
.method-icon{ display:block; font-size:32rpx; margin-bottom:8rpx; }
.method-name{ font-size:24rpx; color:#333; }

.staff-options, .platform-options{ display:flex; gap:16rpx; }
.staff-option, .platform-option{ 
  flex:1; background:#f5f5f5; border-radius:12rpx; padding:20rpx; text-align:center;
  border:2rpx solid transparent;
}
.staff-option.selected, .platform-option.selected{ background:#e6f7ff; border-color:#1890ff; }
.staff-name, .platform-name{ display:block; font-size:26rpx; font-weight:600; margin-bottom:4rpx; }
.platform-desc{ font-size:22rpx; color:#666; }

.export-options{ margin-bottom:32rpx; }
.export-title{ display:block; font-size:28rpx; font-weight:600; margin-bottom:16rpx; }
.export-methods{ display:flex; gap:12rpx; }
.export-btn{ 
  flex:1; background:#f0f0f0; color:#666; border-radius:8rpx; 
  padding:16rpx; font-size:24rpx; text-align:center;
}


.summary-card{ 
  background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);
  color:white; border-radius:16rpx; padding:32rpx; text-align:center;
}
.summary-title{ display:block; font-size:32rpx; font-weight:600; margin-bottom:20rpx; }

.detail-item{ display:block; font-size:26rpx; margin-bottom:8rpx; opacity:0.9; }