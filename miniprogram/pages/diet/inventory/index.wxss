.page{ padding:24rpx; background:#f8f9fa; min-height:100vh; }

.header-stats{ 
  display:flex; gap:16rpx; margin-bottom:24rpx; 
}
.stat-card{ 
  flex:1; background:white; border-radius:16rpx; padding:24rpx; text-align:center;
  box-shadow:0 4rpx 12rpx rgba(0,0,0,0.05);
}
.stat-number{ 
  display:block; font-size:32rpx; font-weight:700; color:#1890ff; margin-bottom:8rpx;
}
.stat-label{ color:#666; font-size:24rpx; }

.alert-section{ 
  background:#fff7e6; border:2rpx solid #ffd666; border-radius:16rpx; 
  padding:24rpx; margin-bottom:24rpx;
}
.alert-header{ margin-bottom:20rpx; }
.alert-title{ display:block; font-size:28rpx; font-weight:600; color:#fa8c16; margin-bottom:8rpx; }
.confidence-note{ color:#999; font-size:22rpx; }

.alert-item{ 
  background:white; border-radius:12rpx; padding:20rpx; margin-bottom:16rpx;
  border-left:6rpx solid #ffa940;
}
.alert-item:last-child{ margin-bottom:0; }
.alert-item.confidence-high{ border-left-color:#52c41a; }
.alert-content{ margin-bottom:16rpx; }
.alert-name{ display:block; font-size:26rpx; font-weight:600; margin-bottom:6rpx; }
.alert-message{ display:block; color:#666; font-size:24rpx; margin-bottom:6rpx; }
.alert-confidence{ color:#999; font-size:22rpx; }
.alert-actions{ display:flex; gap:12rpx; }
.alert-btn{ 
  flex:1; padding:12rpx; border-radius:8rpx; font-size:24rpx; text-align:center;
}
.alert-btn.ignore{ background:#f5f5f5; color:#666; }
.alert-btn.add{ background:#fa8c16; color:white; }

.quick-actions{ display:flex; gap:16rpx; margin-bottom:24rpx; }
.action-btn{ 
  flex:1; padding:24rpx; border-radius:16rpx; font-size:26rpx; font-weight:600; text-align:center;
}
.action-btn.primary{ background:#1890ff; color:white; }
.action-btn.secondary{ background:#52c41a; color:white; }
.action-btn.tertiary{ background:#722ed1; color:white; }

.inventory-categories{ background:white; border-radius:20rpx; padding:32rpx; }
.category-tabs{ 
  display:flex; background:#f5f5f5; border-radius:12rpx; padding:6rpx; margin-bottom:24rpx;
  overflow-x:auto; white-space:nowrap;
}
.category-tab{ 
  flex-shrink:0; padding:16rpx 24rpx; border-radius:8rpx; font-size:24rpx; 
  color:#666; text-align:center; margin-right:8rpx;
}
.category-tab.active{ background:white; color:#1890ff; font-weight:600; }

.search-section{ margin-bottom:24rpx; }
.search-box{ 
  display:flex; align-items:center; background:#f8f9fa; border-radius:12rpx; 
  padding:16rpx 20rpx; border:2rpx solid #eee;
}
.search-icon{ font-size:28rpx; color:#999; margin-right:12rpx; }
.search-input{ flex:1; font-size:26rpx; color:#333; }
.filter-options{ margin-top:12rpx; }
.filter-tip{ color:#999; font-size:22rpx; }
.filter-alias{ 
  color:#1890ff; font-size:22rpx; margin:0 8rpx; padding:4rpx 8rpx; 
  background:#e6f7ff; border-radius:6rpx;
}


.inventory-item{ 
  background:#f8f9fa; border-radius:12rpx; padding:20rpx; margin-bottom:16rpx;
  border:2rpx solid #eee; transition:all 0.3s;
}
.inventory-item.low{ border-color:#fa8c16; background:#fff7e6; }
.inventory-item.expired{ border-color:#f5222d; background:#fff1f0; }
.inventory-item.sufficient{ border-color:#52c41a; background:#f6ffed; }

.item-header{ display:flex; justify-content:space-between; align-items:flex-start; margin-bottom:16rpx; }
.item-info{ flex:1; }
.item-name{ display:block; font-size:28rpx; font-weight:600; margin-bottom:6rpx; }
.item-aliases{ color:#999; font-size:22rpx; }

.status-text{ 
  padding:6rpx 12rpx; border-radius:12rpx; font-size:22rpx; font-weight:600;
}
.item-status.low .status-text{ background:#fa8c16; color:white; }
.item-status.expired .status-text{ background:#f5222d; color:white; }
.item-status.sufficient .status-text{ background:#52c41a; color:white; }

.item-details{ display:flex; justify-content:space-between; align-items:center; margin-bottom:16rpx; }
.quantity-info{ flex:1; }
.quantity-current{ display:block; font-size:26rpx; font-weight:600; margin-bottom:4rpx; }
.quantity-daily, .quantity-predict{ display:block; color:#666; font-size:22rpx; margin-bottom:2rpx; }
.item-actions{ display:flex; gap:8rpx; align-items:center; }
.quantity-btn{ 
  width:48rpx; height:48rpx; border-radius:50%; background:#1890ff; color:white;
  display:flex; align-items:center; justify-content:center; font-size:24rpx;
}
.edit-btn{ 
  background:#f0f0f0; color:#666; padding:8rpx 16rpx; border-radius:8rpx; font-size:22rpx;
}

.item-timeline{ border-top:1rpx solid #eee; padding-top:12rpx; }
.timeline-title{ color:#666; font-size:22rpx; margin-bottom:8rpx; }

.timeline-item{ 
  display:block; color:#999; font-size:20rpx; margin-bottom:4rpx; 
  padding-left:16rpx; position:relative;
}
.timeline-item::before{
  content:'â€¢'; position:absolute; left:0; color:#ccc;
}

.empty-state{ text-align:center; padding:80rpx 32rpx; }
.empty-icon{ display:block; font-size:64rpx; margin-bottom:16rpx; opacity:0.5; }
.empty-text{ display:block; color:#999; font-size:26rpx; margin-bottom:24rpx; }
.empty-action{ 
  background:#1890ff; color:white; border-radius:12rpx; padding:20rpx 32rpx; font-size:24rpx;
}

.trend-section{ background:white; border-radius:20rpx; padding:32rpx; margin-top:24rpx; }
.trend-header{ display:flex; justify-content:space-between; align-items:center; margin-bottom:24rpx; }
.trend-title{ font-size:28rpx; font-weight:600; }
.trend-period{ display:flex; gap:12rpx; }
.period-option{ 
  padding:8rpx 16rpx; border-radius:8rpx; font-size:22rpx; color:#666;
  background:#f5f5f5;
}
.period-option.active{ background:#1890ff; color:white; }

.chart-placeholder{ 
  height:300rpx; background:#f8f9fa; border-radius:12rpx; 
  display:flex; flex-direction:column; align-items:center; justify-content:center;
  color:#999; font-size:24rpx;
}

.modal{ 
  position:fixed; top:0; left:0; right:0; bottom:0; background:rgba(0,0,0,0.5); 
  z-index:999; display:flex; align-items:center; justify-content:center; 
  opacity:0; pointer-events:none; transition:opacity 0.3s;
}
.modal.show{ opacity:1; pointer-events:auto; }
.modal-content{ 
  background:white; border-radius:24rpx; width:85%; max-height:80vh; 
  overflow:hidden; max-width:600rpx;
}
.modal-header{ 
  display:flex; justify-content:space-between; align-items:center; 
  padding:32rpx; border-bottom:1rpx solid #eee;
}
.modal-title{ font-size:32rpx; font-weight:600; }
.close-btn{ font-size:40rpx; color:#999; }
.modal-body{ padding:32rpx; max-height:60vh; overflow-y:auto; }
.form-group{ margin-bottom:32rpx; }
.form-group:last-child{ margin-bottom:0; }
.form-label{ display:block; font-size:26rpx; font-weight:600; margin-bottom:12rpx; color:#333; }
.form-input{ 
  width:100%; background:#f8f9fa; border:2rpx solid #eee; border-radius:12rpx; 
  padding:20rpx; font-size:26rpx; color:#333;
}
.quantity-input{ display:flex; gap:12rpx; align-items:center; }
.form-input.quantity{ flex:1; }
.unit-picker{ 
  background:#f0f0f0; border-radius:8rpx; padding:20rpx 16rpx; 
  min-width:100rpx; text-align:center;
}
.unit-text{ font-size:24rpx; color:#666; }
.date-picker{ 
  background:#f8f9fa; border:2rpx solid #eee; border-radius:12rpx; 
  padding:20rpx; width:100%;
}
.date-text{ font-size:26rpx; color:#666; }
.modal-footer{ display:flex; gap:16rpx; padding:24rpx 32rpx; }
.cancel-btn, .confirm-btn{ 
  flex:1; padding:24rpx; border-radius:12rpx; font-size:28rpx; font-weight:600; text-align:center;
}
.cancel-btn{ background:#f5f5f5; color:#666; }
.confirm-btn{ background:#1890ff; color:white; }