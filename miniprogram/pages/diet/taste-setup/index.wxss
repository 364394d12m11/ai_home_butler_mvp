/* 页面基础样式 */
.page {
  padding: 24rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 12rpx;
}

.subtitle {
  color: #666;
  font-size: 26rpx;
  line-height: 1.5;
}

/* 区块样式 */
.section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.section-desc {
  color: #999;
  font-size: 24rpx;
}

/* 消费层级样式 */
.level-options {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.level-option {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.level-option.selected {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f9ff 100%);
  border-color: #1890ff;
}

.level-name {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}

.level-desc {
  color: #666;
  font-size: 24rpx;
  line-height: 1.4;
}

/* 风格偏好样式 */
.aesthetic-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.aesthetic-option {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.aesthetic-option.selected {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f9ff 100%);
  border-color: #1890ff;
}

.option-emoji {
  display: block;
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.option-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

/* 菜系偏好样式 */
.cuisine-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.cuisine-tag {
  background: #f0f0f0;
  color: #666;
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.cuisine-tag.selected {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

/* 辣度上限样式 */
.spicy-levels {
  display: flex;
  gap: 12rpx;
}

.spicy-level {
  flex: 1;
  background: #f5f5f5;
  color: #666;
  padding: 12rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.spicy-level.selected {
  background: #fff1f0;
  color: #f5222d;
  border-color: #f5222d;
}

.spicy-text {
  font-size: 24rpx;
}

/* 口味偏好样式 */
.flavor-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.flavor-tag {
  background: #f0f0f0;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.flavor-tag.selected {
  background: #52c41a;
  color: white;
  border-color: #52c41a;
}

/* 制作复杂度样式 */
.complexity-slider {
  margin-top: 20rpx;
}

.complexity-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #999;
}

/* 探索度样式 */
.exploration-options {
  display: flex;
  gap: 12rpx;
}

.exploration-option {
  flex: 1;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.exploration-option.selected {
  background: #f6ffed;
  border-color: #52c41a;
}

.exploration-name {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
  color: #333;
}

.exploration-desc {
  color: #666;
  font-size: 20rpx;
  line-height: 1.3;
}

/* 预览区域样式 */
.preview-section {
  text-align: center;
  margin: 40rpx 0;
}

.preview-btn {
  background: #f0f0f0;
  color: #666;
  padding: 28rpx 48rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

/* 底部操作样式 */
.bottom-actions {
  display: flex;
  gap: 16rpx;
  position: sticky;
  bottom: 24rpx;
  margin-top: 40rpx;
  z-index: 10;
}

.save-btn {
  flex: 1;
  background: #667eea;
  color: white;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}
.cuisine-tag.selected {
  background: #667eea !important;
  color: white !important;
  border-color: #667eea !important;
}

.flavor-tag.selected {
  background: #52c41a !important;
  color: white !important;
  border-color: #52c41a !important;
}
