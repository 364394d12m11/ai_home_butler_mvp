/* pages/diet/taste-setup/index.wxss - V5.3 */

.page {
  padding: 32rpx;
  padding-bottom: 200rpx;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  min-height: 100vh;
}

/* 头部 */
.header {
  margin-bottom: 48rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.first-tip {
  display: block;
  font-size: 26rpx;
  color: #ff6b6b;
  margin-top: 16rpx;
  padding: 16rpx 24rpx;
  background: #fff5f5;
  border-radius: 12rpx;
  border: 2rpx solid #ffe3e3;
}

/* 区块 */
.section {
  margin-bottom: 48rpx;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.section-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 子标题 */
.subsection-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin: 24rpx 0 16rpx 0;
}

.kids-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

/* 饮食目标卡片 */
.goal-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.goal-card {
  background: #f8f9fa;
  border: 3rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  position: relative;
}

.goal-card.selected {
  background: #fff4e6;
  border-color: #ff9933;
  box-shadow: 0 4rpx 12rpx rgba(255, 153, 51, 0.15);
}

.goal-card.selected::after {
  content: '✓';
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff9933;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.goal-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.goal-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
}

/* 过敏/禁忌标签 */
.allergy-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.allergy-tag {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border: 3rpx solid #e9ecef;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s ease;
}

.allergy-tag.selected {
  background: #fff4e6;
  border-color: #ff9933;
  color: #ff9933;
  font-weight: 600;
}

/* 菜系标签 */
.cuisine-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.cuisine-tag {
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border: 3rpx solid #e9ecef;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #333;
  transition: all 0.3s ease;
}

.cuisine-tag.selected {
  background: #e8f5e9;
  border-color: #66bb6a;
  color: #2e7d32;
  font-weight: 600;
}

/* 预算选项 */
.budget-options {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.budget-option {
  background: #f8f9fa;
  border: 3rpx solid #e9ecef;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.budget-option.selected {
  background: #fff4e6;
  border-color: #ff9933;
  box-shadow: 0 4rpx 12rpx rgba(255, 153, 51, 0.15);
}

.budget-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 8rpx;
}

.budget-desc {
  font-size: 22rpx;
  color: #666;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: white;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.04);
  display: flex;
  gap: 16rpx;
}

.skip-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.save-btn {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #ff9933 0%, #ffb366 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 153, 51, 0.3);
}

.save-btn::after {
  border: none;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .goal-grid {
    grid-template-columns: 1fr;
  }
}