<view class="page">
  <view class="section card">
    <view class="title">家务</view>
    <input placeholder="如：换床单" bindinput="onChore"/>
    <button class="btn-primary" bindtap="addChore">添加</button>
    <block wx:for="{{chores}}" wx:key="_id">
      <view class="row" style="margin-top:8px">
        <view>{{item.title}}</view>
        <button size="mini" data-id="{{item._id}}" bindtap="doneChore">打卡</button>
      </view>
    </block>
  </view>

  <view class="section card">
    <view class="title">快递</view>
    <button bindtap="addParcel">新建包裹（拍照+位置）</button>
    <block wx:for="{{parcels}}" wx:key="_id">
      <view class="row" style="margin-top:8px">
        <view>{{item.note||'包裹'}} · {{item.place||'未标记位置'}}</view>
        <text class="tag">{{item.status||'在途'}}</text>
      </view>
    </block>
  </view>
</view>
