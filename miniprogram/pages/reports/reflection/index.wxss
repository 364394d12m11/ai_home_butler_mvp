/* pages/reports/reflection/index.wxss - V4.2 每日复盘页面样式 */

.reflection-page {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #f6a44b 0%, #f9931b 100%);
  padding: 40rpx 32rpx 32rpx;
  color: #fff;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.4;
}

/* 标签页 */
.tabs-container {
  background: #fff;
  padding: 24rpx 32rpx;
  display: flex;
  gap: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  background: #f5f5f5;
}

.tab-item.active {
  background: linear-gradient(135deg, #f6a44b 0%, #f9931b 100%);
  box-shadow: 0 6rpx 20rpx rgba(246, 164, 75, 0.3);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: 600;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #f6a44b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.btn-refresh {
  background: #f6a44b;
  color: #fff;
  border-radius: 20rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
}

/* 内容容器 */
.content-container {
  padding: 24rpx 32rpx;
}

/* 活跃度卡片 */
.activity-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  color: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.3);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 24rpx;
}

.activity-left {
  flex: 1;
}

.activity-date {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  margin-bottom: 8rpx;
}

.activity-label {
  font-size: 32rpx;
  font-weight: 600;
  display: block;
}

.activity-right {
  text-align: center;
}

.activity-score {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1;
}

.activity-unit {
  font-size: 24rpx;
  opacity: 0.8;
  margin-left: 4rpx;
}

.activity-bar {
  background: rgba(255, 255, 255, 0.2);
  height: 8rpx;
  border-radius: 4rpx;
  overflow: hidden;
}

.activity-progress {
  background: #fff;
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.8s ease;
}

/* 卡片通用样式 */
.summary-card,
.insights-card,
.suggestions-card,
.week-overview-card,
.history-card,
.stats-overview {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d3142;
}

.card-subtitle {
  font-size: 24rpx;
  color: #666;
}

.ai-badge {
  background: rgba(246, 164, 75, 0.1);
  color: #f6a44b;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 总结内容 */
.summary-content {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border-left: 4rpx solid #f6a44b;
}

.summary-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #444;
}

/* 洞察列表 */
.insights-list,
.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.insight-item,
.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.insight-icon,
.suggestion-icon {
  font-size: 28rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.insight-text,
.suggestion-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.5;
  color: #555;
}

/* 周概览 */
.week-header {
  margin-bottom: 24rpx;
}

.week-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3142;
  display: block;
  margin-bottom: 8rpx;
}

.week-period {
  font-size: 24rpx;
  color: #666;
}

.week-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #f6a44b;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #666;
}

/* 每日明细 */
.daily-details {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.daily-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.daily-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.daily-left {
  flex: 1;
}

.daily-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.daily-date {
  font-size: 22rpx;
  color: #666;
}

.daily-right {
  text-align: right;
}

.daily-interactions {
  font-size: 22rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.daily-score {
  font-size: 24rpx;
  font-weight: 600;
  color: #f6a44b;
}

/* 历史记录 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: background 0.3s ease;
}

.history-item:active {
  background: #f0f0f0;
}

.history-left {
  flex: 1;
}

.history-date {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 4rpx;
}

.history-meta {
  font-size: 22rpx;
  color: #666;
}

.history-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.history-score-container {
  text-align: center;
}

.history-score {
  font-size: 28rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 2rpx;
}

.history-level {
  font-size: 20rpx;
  font-weight: 500;
}

.history-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 统计概览 */
.overview-stats {
  display: flex;
  gap: 24rpx;
}

.overview-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.overview-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #f6a44b;
  display: block;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 22rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 40rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  padding: 24rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #f6a44b 0%, #f9931b 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(246, 164, 75, 0.3);
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
}

/* 底部工具栏 */
.bottom-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 32rpx;
  display: flex;
  gap: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tool-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: transparent;
  border: none;
  font-size: 24rpx;
  color: #666;
}

.tool-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tool-text {
  font-size: 22rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .week-stats,
  .overview-stats {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .action-buttons {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .history-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 12rpx;
  }
  
  .history-right {
    align-self: flex-end;
  }
}