/* miniprogram/pages/reports/index.wxss - V3.0 三标签页版 */

.page { 
  min-height: 100vh;
  background: #f8f9fa;
}

/* 标签页头部 */
.tabs-header {
  background: #fff;
  padding: 20rpx 24rpx;
  display: flex;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 12rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #f6a44b 0%, #f9931b 100%);
  box-shadow: 0 4rpx 12rpx rgba(246, 164, 75, 0.3);
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: 600;
}

/* 加载和空状态 */
.loading, .empty { 
  padding: 120rpx 0; 
  text-align: center; 
  color: #888; 
}

.loading-text, .empty-text {
  font-size: 28rpx;
  margin-bottom: 32rpx;
}

.btn-primary {
  background: #f6a44b;
  color: #fff;
  border-radius: 20rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  border: none;
}

.btn-secondary {
  background: #f5f5f5;
  color: #333;
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  font-size: 26rpx;
  border: none;
}

/* 内容区域 */
.content { 
  padding: 24rpx;
}

/* 周报样式 */
.header .title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #2d3142;
  margin-bottom: 8rpx;
}

.header .range { 
  color: #666; 
  font-size: 26rpx;
}

.kpis { 
  display: flex; 
  gap: 20rpx; 
  margin: 32rpx 0; 
}

.kpi-card { 
  flex: 1; 
  background: #fff; 
  border-radius: 20rpx; 
  padding: 24rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.06); 
  text-align: center;
}

.kpi-label { 
  color: #666; 
  font-size: 24rpx; 
  margin-bottom: 12rpx;
}

.kpi-value { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #f6a44b;
}

.section { 
  margin-top: 32rpx; 
  background: #fff; 
  border-radius: 20rpx; 
  padding: 24rpx; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.06); 
}

.section-title { 
  font-size: 30rpx; 
  font-weight: 600; 
  margin-bottom: 20rpx; 
  color: #2d3142;
}

.suggestions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.suggestion-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-text { 
  line-height: 1.6; 
  font-size: 26rpx; 
  color: #444;
}

.actions { 
  margin-top: 32rpx; 
  text-align: center; 
}

/* 六维画像样式 */
.overview-card {
  background: linear-gradient(135deg, #f6a44b 0%, #f9931b 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  color: #fff;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(246, 164, 75, 0.3);
}

.overview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: 600;
}

.overall-score {
  text-align: center;
}

.score-number {
  font-size: 48rpx;
  font-weight: 700;
  display: block;
  line-height: 1;
}

.score-label {
  font-size: 22rpx;
  opacity: 0.9;
  display: block;
  margin-top: 4rpx;
}

.overview-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.level-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.level-badge.excellent {
  background: rgba(76, 175, 80, 0.3);
}

.level-badge.good {
  background: rgba(255, 193, 7, 0.3);
}

.level-badge.normal {
  background: rgba(158, 158, 158, 0.3);
}

/* 维度分析 */
.dimensions-analysis {
  margin-top: 32rpx;
}

.dimension-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.06);
}

.dimension-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.dimension-left {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
}

.dimension-emoji {
  font-size: 40rpx;
  flex-shrink: 0;
}

.dimension-info {
  flex: 1;
}

.dimension-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3142;
  display: block;
  margin-bottom: 8rpx;
}

.dimension-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: block;
}

.dimension-right {
  text-align: center;
  flex-shrink: 0;
}

.dimension-score {
  font-size: 32rpx;
  font-weight: 700;
  color: #f6a44b;
  display: block;
  margin-bottom: 8rpx;
}

.dimension-level {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-weight: 500;
}

.dimension-level.excellent {
  background: #e8f5e8;
  color: #2d7d32;
}

.dimension-level.good {
  background: #fff3e0;
  color: #f57c00;
}

.dimension-level.normal {
  background: #f5f5f5;
  color: #757575;
}

/* 洞察和建议 */
.dimension-insights, .dimension-actions {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
  margin-top: 16rpx;
}

.insights-title, .actions-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 12rpx;
}

.insights-list, .actions-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.insight-item, .action-item {
  font-size: 22rpx;
  color: #555;
  line-height: 1.4;
}

/* 整体洞察 */
.insights-section {
  margin-top: 32rpx;
}

.insights-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.06);
}

.insight-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.insight-item:last-child {
  border-bottom: none;
}

.insight-icon {
  font-size: 24rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.insight-text {
  font-size: 26rpx;
  color: #444;
  line-height: 1.5;
  flex: 1;
}

/* 改进建议 */
.recommendations-section {
  margin-top: 32rpx;
}

.recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommendation-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,.06);
}

.rec-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.rec-priority {
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.rec-priority.high {
  background: #ffebee;
  color: #d32f2f;
}

.rec-priority.medium {
  background: #fff3e0;
  color: #f57c00;
}

.rec-priority.low {
  background: #e8f5e8;
  color: #388e3c;
}

.rec-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3142;
}

.rec-items {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.rec-item {
  font-size: 22rpx;
  color: #555;
  line-height: 1.4;
}

/* 趋势分析样式 */
.usage-section {
  margin-bottom: 32rpx;
}

.usage-cards {
  display: flex;
  gap: 16rpx;
}

.usage-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,.06);
}

.usage-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #f6a44b;
  display: block;
  margin-bottom: 8rpx;
}

.usage-label {
  font-size: 22rpx;
  color: #666;
}

.preferences-section {
  margin-bottom: 32rpx;
}

.preference-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,.06);
}

.pref-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 12rpx;
}

.pref-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.pref-tag {
  background: #f0f8ff;
  color: #1976d2;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.pref-value {
  font-size: 24rpx;
  color: #444;
}

.trends-insights {
  margin-top: 32rpx;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .kpis {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .usage-cards {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .dimension-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .dimension-right {
    align-self: flex-end;
  }
}