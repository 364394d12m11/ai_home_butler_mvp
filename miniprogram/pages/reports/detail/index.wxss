.page { padding: 16rpx 20rpx 32rpx; }
.header .title { font-size: 36rpx; font-weight: 600; }
.header .sub { color: #888; margin-top: 8rpx; }

.meta { color:#666; margin: 12rpx 0 20rpx; }

.section { margin-top: 24rpx; }
.sec-title { font-weight: 600; margin: 12rpx 0; }

.line { margin: 6rpx 0; }

.card { padding: 16rpx; border-radius: 16rpx; background: #fff; box-shadow: 0 4rpx 16rpx rgba(0,0,0,.06); margin-bottom: 16rpx; }
.row { display: flex; align-items: center; justify-content: space-between; }
.row.head .date { font-size: 30rpx; font-weight: 600; }
.weather { color:#666; }
.sub { color: #888; }

.block-title { margin-top: 10rpx; color:#555; }
.sug { color:#444; margin: 4rpx 0; }

.event { margin-top: 8rpx; }
.evt-title { font-weight: 500; }
.evt-sub { color:#888; margin-left: 10rpx; }

.empty { color:#888; text-align:center; margin-top: 32rpx; }
