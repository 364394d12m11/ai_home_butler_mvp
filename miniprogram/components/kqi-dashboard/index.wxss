
.dashboard-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1001;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dashboard-container {
  width: 90%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
}

.dashboard-header {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.grade {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  background: #fff;
}

.grade-A { color: #10b981; }
.grade-B { color: #3b82f6; }
.grade-C { color: #f59e0b; }
.grade-D { color: #ef4444; }
.grade-F { color: #991b1b; }

.dashboard-body {
  padding: 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.metric-card {
  padding: 32rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.metric-card.highlight {
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
}

.metric-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.metric-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.metric-value.pass {
  color: #10b981;
}

.metric-value.fail {
  color: #ef4444;
}

.metric-target {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.progress-bar {
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
  margin-top: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

.dashboard-footer {
  padding: 32rpx;
  border-top: 1px solid #eee;
  display: flex;
  gap: 24rpx;
}

.export-btn, .close-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.export-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.close-btn {
  background: #f3f4f6;
  color: #666;
}
