}

.voice-btn {
  width: 100%;
  height: 64rpx;
  background: white;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-btn.recording {
  background: #ECECEC;
  color: #000;
}

.right-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.send-btn {
  padding: 12rpx 32rpx;
  background: #07C160;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
