
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.dialog-container {
  width: 100%;
  height: 80vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
}

.messages {
  flex: 1;
  padding: 32rpx;
  overflow-y: auto;
}

.message {
  display: flex;
  margin-bottom: 24rpx;
}

.message.user {
  justify-content: flex-end;
}

.message.assistant {
  justify-content: flex-start;
}

.message-content {
  max-width: 70%;
  padding: 20rpx 28rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.message.user .message-content {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.message.assistant .message-content {
  background: #f5f5f5;
  color: #333;
}

.message-content image {
  width: 100%;
  border-radius: 12rpx;
}

.typing-indicator {
  display: flex;
  gap: 8rpx;
  padding: 20rpx;
}

.typing-indicator span {
  width: 12rpx;
  height: 12rpx;
  background: #999;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.typing-indicator span:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator span:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% { transform: translateY(0); opacity: 0.6; }
  30% { transform: translateY(-10rpx); opacity: 1; }
}

.input-area {
  border-top: 1px solid #eee;
  padding: 24rpx;
  background: #fff;
}

.mode-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.mode-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.mode-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.text-input-area {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.text-input {
  flex: 1;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.send-btn {
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.send-btn[disabled] {
  opacity: 0.5;
}

.voice-input-area {
  display: flex;
  justify-content: center;
}

.record-btn {
  width: 500rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-btn.recording {
  background: #ff6b6b;
  animation: pulse 1s infinite;
}

.image-input-area {
  padding: 20rpx;
  text-align: center;
}

.upload-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.hint {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}
/* 微信风格输入区 */
.input-area-wechat {
  display: flex;
  align-items: flex-end;
  padding: 16rpx;
  background: #F7F7F7;
  border-top: 1rpx solid #E5E5E5;
}

.left-actions {
  margin-right: 16rpx;
}

.icon-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: white;
  border-radius: 8rpx;
}

.input-main {
  flex: 1;
  margin-right: 16rpx;
}

.text-input {
  width: 100%;
  min-height: 64rpx;
  max-height: 200rpx;
  padding: 12rpx 20rpx;
  background: white;
  border-radius: 8rpx;
  font-size: 28rpx;
