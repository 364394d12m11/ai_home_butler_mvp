}
/* 语音消息 */
.voice-message {
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 120rpx;
  padding: 16rpx 20rpx;
  position: relative;
}

/* 语音动画 */
.voice-animation {
  display: flex;
  align-items: center;
  gap: 6rpx;
  width: 48rpx;
}

.wave {
  width: 4rpx;
  height: 16rpx;
  background: #333;
  border-radius: 2rpx;
  transition: all 0.3s;
}

.message.user .wave {
  background: #000;
}

.wave.active {
  animation: wave-bounce 0.8s ease-in-out infinite;
}

.wave.active:nth-child(2) {
  animation-delay: 0.2s;
}

.wave.active:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes wave-bounce {
  0%, 100% { height: 16rpx; }
  50% { height: 32rpx; }
}

/* 时长和进度 */
.voice-duration {
  font-size: 24rpx;
  color: #666;
}

.message.user .voice-duration {
  color: rgba(0,0,0,0.6);
}

.voice-progress {
  font-size: 22rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 倍速标识 */
.voice-speed {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  font-size: 18rpx;
  color: #FF6B6B;
  background: rgba(255,107,107,0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

/* 未听标识（红点） */
.unread-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FF3B30;
  border-radius: 50%;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}